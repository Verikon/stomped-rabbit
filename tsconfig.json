{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "strict": false,
    "sourceMap": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "target":"es2016",
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}