{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "strict": false,
        "sourceMap": false,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "lib": ["esnext", "dom", "es2015"],
		"paths": {
			"@src/*": ["./src/*"]
		}
    },
    "exclude": [
		"node_modules"
	],
	"include": [
		"./src/**/*"
	]
}